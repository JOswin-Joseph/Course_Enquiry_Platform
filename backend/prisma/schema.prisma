datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")     // prisma will read from backend/.env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  enquiries Enquiry[]   
}

model Enquiry {
  id        String   @id @default(uuid())
  course    String
  status    String   @default("pending")  // "pending", "replied", "closed"
  createdAt DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}

